@model Training_Api.Models.StateViewModel
<form asp-controller="State" asp-action="Create" method="post">
    @Html.ValidationSummary()
    <div class="mb-3 row">
        @* <label class="col-sm-2 col-form-label" for="inputName">Name</label> *@
        @Html.LabelFor(m => m.StateName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.StateName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.StateName, null,
                new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        @* <label for="inputCode" class="col-sm-2 col-form-label">Code</label> *@
        @Html.LabelFor(m => m.Code, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Code,
                new { @class = "form-control", maxlength = "2" })
            @Html.ValidationMessageFor(m => m.Code, null,
                new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="row mb-3">
    <div class="col-md-6 mb-3">
        <label asp-for="IsActive" class="form-label">Status</label>
        <select asp-for="IsActive" class="form-select">
            <option value="">Select Status</option>
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger small"></span>
    </div>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
